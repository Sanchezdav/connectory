<h2 class="mb-8 text-3xl">Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <div class="field mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-4">
    <span class="text-sm italic text-gray-500">(leave blank if you don't want to change it)</span>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'block border border-grey-light w-full p-3 rounded' %>
    <% if @minimum_password_length %>
      <span class="text-sm italic text-gray-500"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="field mb-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <div class="field mb-4">
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: 'Current Password', class: 'block border border-grey-light w-full p-3 rounded' %>
    <span class="text-sm italic text-gray-500">(we need your current password to confirm your changes)</span>
  </div>

  <div class="actions my-3">
    <%= f.submit "Update", class: 'w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-600 duration-300 cursor-pointer' %>
  </div>
<% end %>

<div class="bg-red-400 rounded p-3 text-center mt-5">
  <h3 class="text-lg mb-3">Unhappy?</h3>
  <%= button_to "Cancel my account", registration_path(resource_name), class: 'bg-red-700 text-white py-2 px-5 cursor-pointer hover:bg-red-800 duration-300', data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>

<div class="text-center mt-5">
  <%= link_to "Back", :back, class: 'text-blue-500 underline hover:text-blue-700' %>
</div>
