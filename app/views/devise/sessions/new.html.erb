<h2 class="mb-8 text-3xl">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <div class="field mb-4">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-3">
    <%= f.submit "Log in", class: 'w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-600 duration-300 cursor-pointer' %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
