<h2 class="mb-8 text-3xl">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <div class="field mb-4">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <div class="field mb-4">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'block border border-grey-light w-full p-3 rounded' %>
    <% if @minimum_password_length %>
    <span class="text-sm text-gray-500 italic">(<%= @minimum_password_length %> characters minimum)</span>
    <% end %><br />
  </div>

  <div class="field mb-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'block border border-grey-light w-full p-3 rounded' %>
  </div>

  <div class="actions my-3">
    <%= f.submit "Sign up", class: 'w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-600 duration-300 cursor-pointer' %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
