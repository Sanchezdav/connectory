<section class="bg-gray-100 rounded shadow p-5 mt-5">
  <div class="flex">
    <figure style="min-width: 50px;">
      <img src="https://avatars.dicebear.com/api/bottts/rodkd.svg" alt="avatar" width='50' height='50'>
    </figure>
    <div class="pl-5">
      <p class="mb-2">
        <span class="font-bold italic mr-5">
          <%= comment.user.name.familiar %>
        </span>
        <span><%= time_ago_in_words(comment.created_at) %> ago</span>
      </p>
      <p><%= comment.content %></p>
    </div>
  </div>
  <% if current_user == comment.user %>
    <div class="text-right">
      <%= link_to 'Destroy', post_comment_path(comment.post, comment), method: :delete, class: 'text-red-500 hover:text-red-700 underline' %>
    </div>
  <% end %>
</section>
